<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MVVM_CleanArchitecture" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/color_common_transparent</item>
        <!-- Navigation bar (Bottom Soft Key) color. -->
        <item name="android:navigationBarColor">@color/color_common_bg_default</item>

        <!-- Activity, Fragment, BottomNavigation -->
        <item name="android:windowBackground">@color/color_common_bg_default</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>
</resources>