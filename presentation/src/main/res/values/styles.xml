<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!--######################################### Base ##########################################-->

    <style name="Base" />

    <style name="Base.Size" />

    <style name="Base.TextView" />

    <style name="Base.Size.0_0">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="Base.Size.0_Wrap">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Base.Size.Wrap_Wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Base.Size.Match_Wrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Base.Size.Match_Match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Base.TextView.Size.0_Wrap" parent="Base.Size.0_Wrap">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/color_common_normal_text_white</item>
    </style>

    <style name="Base.TextView.Size.Match_Wrap" parent="Base.Size.Match_Wrap">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/color_common_normal_text_white</item>
    </style>

    <style name="Base.TextView.Size.Wrap_Wrap" parent="Base.Size.Wrap_Wrap">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/color_common_normal_text_white</item>
    </style>

    <!--######################################## View ###########################################-->

    <!-- View Divider -->
    <style name="View_Divider_Style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/color_common_divider_grey</item>
    </style>

    <!-- View Detail Thumbnail Gradient Dim -->
    <style name="View_Detail_Thumbnail_Gradient" parent="Base.Size.0_0">
        <item name="android:background">@drawable/shape_bottom_gradient</item>
    </style>

    <!--################################ FragmentContainerView ##################################-->

    <!-- BottomNavigationView -->
    <style name="FragmentContainerView_Style" parent="Base.Size.0_0">
        <item name="android:name">androidx.navigation.fragment.NavHostFragment</item>
    </style>

    <!--################################ BottomNavigationView ###################################-->

    <!-- BottomNavigationView -->
    <style name="BottomNavigationView_Style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">57dp</item>
        <item name="android:background">@color/color_common_bg_default</item>
    </style>

    <!--################################### NestedScrollView ####################################-->
    <style name="NestedScrollView_Detail_Contents_Style" parent="Base.Size.0_0">
        <item name="android:fillViewport">true</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

    <!--###################################### Indicator ########################################-->

    <!-- Indicator -->
    <style name="Indicator_Style" parent="Base.Size.Wrap_Wrap">
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <!--###################################### ImageView ########################################-->

    <!-- ImageView Title -->
    <style name="ImageView_Title_Style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tint">@color/white</item>
        <item name="android:src">@drawable/ic_marvel_studios</item>
    </style>

    <!-- ImageView Home Banner Top Gradient -->
    <style name="ImageView_Home_Gradient_Top_Style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:translationZ">1dp</item>
        <item name="android:background">@drawable/shape_top_gradient</item>
    </style>

    <!-- ImageView Home Banner Bottom Gradient -->
    <style name="ImageView_Home_Gradient_Bottom_Style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:background">@drawable/shape_bottom_gradient</item>
    </style>

    <!-- ImageView Home Banner Thumbnail-->
    <style name="ImageView_Home_Banner_Thumbnail_Style" parent="Base.Size.0_0">
        <item name="android:scaleType">centerCrop</item>
    </style>

    <!-- ImageView Home List Thumbnail-->
    <style name="ImageView_Home_List_Thumbnail_Style" parent="Base.Size.Match_Match">
        <item name="android:scaleType">centerCrop</item>
    </style>

    <!-- ImageView Detail Background -->
    <style name="ImageView_Detail_Background_Style" parent="Base.Size.0_0">
        <item name="android:tintMode">src_over</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <!--####################################### TextView ########################################-->

    <!-- TextView Title -->
    <style name="Base.TextView.Title_Style" parent="Base.Size.Wrap_Wrap">
        <item name="android:textSize">8dp</item>
        <item name="android:textColor">@color/color_common_normal_text_white</item>
        <item name="android:text">@string/label_data_provided_by_marvel</item>
    </style>

    <!-- TextView Home List Title -->
    <style name="Base.TextView.Home_List_Style" parent="Base.Size.0_Wrap">
        <item name="android:layout_marginStart">7dp</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_common_normal_text_white</item>
    </style>

    <!-- TextView Home List Item Name -->
    <style name="Base.TextView.Home_List_Item_Name_Style" parent="Base.Size.0_Wrap">
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/color_common_normal_text_white</item>
    </style>

    <style name="Base.TextView.Detail_Title_Style" parent="Base.Size.0_Wrap">
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:autoSizeMaxTextSize" tools:targetApi="o">20dp</item>
        <item name="android:autoSizeTextType" tools:targetApi="o">uniform</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dp</item>
        <item name="android:maxLines">3</item>
    </style>

    <style name="Base.TextView.Detail_Licence_Style" parent="Base.Size.0_Wrap">
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10dp</item>
    </style>

    <!--######################################## Button #########################################-->

    <style name="Button_Detail_More_Style" parent="Base.Size.0_Wrap">
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/color_common_highlight</item>
    </style>

    <!--####################################### GuideLine #######################################-->

    <style name="GuideLine_Vertical_Style" parent="Base.Size.Wrap_Wrap">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="GuideLine_Horizontal_Style" parent="Base.Size.Wrap_Wrap">
        <item name="android:orientation">horizontal</item>
    </style>

    <!--######################################### Group #########################################-->

    <style name="Group_Style" parent="Base.Size.Wrap_Wrap"/>

</resources>